<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/test_app_green_light</item>
        <item name="colorPrimaryDark">@color/test_app_green_dark</item>
        <item name="colorAccent">@color/test_app_blue</item>
    </style>

    <style name="SwitchTheme" parent="AppTheme">
        <item name="colorControlActivated">@color/test_app_green_dark</item>
    </style>

    <style name="PrimaryButtonGreen" parent="Button">
        <item name="android:layout_width">212dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/primary_button_green</item>
        <item name="android:textAppearance">@style/Button</item>
        <item name="android:textColor">@color/test_app_white</item>
    </style>

    <style name="toggle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:layout_width">51dp</item>
        <item name="android:layout_height">31dp</item>
        <item name="theme">@style/SwitchTheme</item>
    </style>

    <!--    Font Styles-->
    <style name="H1">
        <item name="android:textSize">28sp</item>
        <item name="android:lineSpacingExtra">10sp</item>
    </style>

    <style name="H2">
        <item name="android:textSize">22sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="H3">
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">7sp</item>
    </style>

    <style name="Button">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="H4">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="P1">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="Label">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="H5">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">5sp</item>
    </style>

    <style name="P2">
        <item name="android:textSize">14sp</item>
    </style>

</resources>